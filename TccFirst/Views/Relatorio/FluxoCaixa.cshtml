
@{
    ViewBag.Title = "FluxoCaixa";
}

<div>
    <h2>FLUXO DE CAIXA</h2>
</div>

<div class="row">
    <div class="form-group">
        <div class="">
            <label for="data-inicial">Data Inicial</label>
            <input type="date" id="data-inicial" class="form-control " />
        </div>
    </div>

    <div class="form-group">
        <div class="">
            <label for="data-final">Data final</label>
            <input type="date" id="data-final" class="form-control ml-2" />
        </div>
    </div>
</div>


<div class="row">
    <div class="col-12">
        <div id="morris-extra-area"></div>
    </div>
</div>

@section js{
    <!-- Morris Chart js -->
    <script src="~/Content/tema/bower_components/raphael/js/raphael.min.js"></script>
    <script src="~/Content/tema/bower_components/morris.js/js/morris.js"></script>
    <script>
        // Extra chart
        $.ajax({
            url: '/relatorio/fluxocaixadados',
            data: {
                dataInicial: "2019-06-20",
                dataFinal: "2019-06-20"
            },
            success: function (data) {

            }
        });


        Morris.Area({
            element: 'morris-extra-area',
            data: [
                {
                    period: '2010',
                    transacao: 0,
                    caixa: 0
                },
                {
                    period: '2011',
                    transacao: 50,
                    caixa: 15
                },
                {
                    period: '2012',
                    transacao: 20,
                    caixa: 50
                }
            ],
            lineColors: ['#7E81CB', '#01C0C8'],
            xkey: 'period',
            ykeys: ['transacao', 'caixa'],
            labels: ['Caixa', 'Transação'],
            pointSize: 0,
            lineWidth: 0,
            resize: true,
            fillOpacity: 0.8,
            behaveLikeLine: true,
            gridLineColor: '#5FBEAA',
            hideHover: 'auto'

        });</script>
}