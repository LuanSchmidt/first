<div id="modal-titulo-pagar" class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Cadastrar Titulo Pagar</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label for="tituloPagar-campo-descricao" >Descrição</label>
                    <input type="text" id="tituloPagar-campo-descricao" class="form-control" />
                </div>

                <div class="form-group">
                    <label for="tituloPagar-campo-forma-pagamento" >Forma de Pagamento</label>
                    <input  type="text" id="tituloPagar-campo-forma-pagamento"/>
                    <select class="form-control" name="forma_pagamento">
                        <option disabled="disabled" selected="selected">Selecione uma forma de pagamento</option>
                        <option>Dinheiro</option>
                        <option>Cartão Débito</option>
                        <option>Cartão de Crédito</option>
                    </select>
                </div>

                <div class="row">
                    <div class="col-1">
                        <label for="tituloPagar-campo-caixa">Caixa</label>
                    </div>
                    <div class="col-5">
                        <input type="checkbox" id="tituloPagar-campo-caixa" class="form-control" />
                    </div>

                    <div class="col-1">
                        <label for="tituloPagar-campo-banco">Banco</label>
                    </div>
                    <div class="col-5">
                        <input type="checkbox" id="tituloPagar-campo-banco" class="form-control" />
                    </div>
                </div>

                <div class="form-group">
                    <label for="tituloPagar-campo-valor-total">Valor Total</label>
                    <input type="text" id="tituloPagarvalor-campo-valor-total" class="form-control" />
                </div>

                <div class="form-group">
                    <label for="tituloPagar-campo-status">Status</label>
                    <input  type="text" id="tituloPagar-campo-status" class="form-control"/>
                    <select class="form-control" name="status">
                        <option disabled="disabled" selected="selected">Selecione um status</option>
                        <option>Pendente</option>
                        <option>Pago</option>
                        <option>Cancelado</option>
                        <option>Pago parcialmente</option>
                    </select>
                </div>

                <div class="form-group">
                    <label for="tituloPagar-campo-data-lancamento" mas>Data de Lançamento</label>
                    <input type="date" id="tituloPagar-campo-data-lancamento" class="form-control" />
                </div>

                <div class="form-group">
                    <label for="tituloPagar-campo-data-recebimento" mas>Data de Recebimento</label>
                    <input type="date" id="tituloPagar-campo-data-recebimento" class="form-control" />
                </div>


                <div class="form-group">
                    <label form="tituloPagar-campo-data-vencimento" mas>Data Vencimento</label>
                    <input type="date" id="tituloPagar-campo-data-vencimento" class="form-control" />
                </div>

                <div class="form-group">
                    <label for="tituloPagar-campo-complemento" mas>Complemento</label>
                    <input type="text" id="tituloPagar-campo-complemento" class="form-control" />
                </div>

                <div class="form-group">
                    <label for="tituloPagar-campo-quantidade-parcelas">Quantidade de Parcelas</label>
                    <input type="number" id="tituloPagar-campo-quantidade-parcelas" class="form-control" />
                </div>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-primary" id="titulo-pagar-botao-salvar">Salvar</button>
            </div>
        </div>
    </div>
</div>
