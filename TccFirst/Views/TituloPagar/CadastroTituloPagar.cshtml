
@{
    ViewBag.Title = "CadastroTituloPagar";
}

<h2>Cadastro de Titulo a Pagar</h2>

<form action="/CadastroTituloPagar/cadastro" method="post">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Cadastrar Titulo</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

            <div class="modal-body">
                <div class="form-group">
                    <label for="tituloPagar-campo-descricao" mas>Descrição</label>
                    <input type="text" id="tituloPagar-campo-descricao" class="form-control" />
                </div>

                <div class="form-group">
                    <label for="tituloPagar-campo-forma-pagamento" mas>Forma de Pagamento</label>
                    <select class="form-control" name="forma_pagamento">
                        <option disabled="disabled" selected="selected">Selecione uma forma de pagamento</option>
                        <option>Dinheiro</option>
                        <option>Cartão Débito</option>
                        <option>Cartão de Crédito</option>
                    </select>
                </div>

                <div class="row">
                    <div class="col-1">
                        <label for="tituloPagar-campo-caixa">Caixa</label>
                    </div>
                    <div class="col-5">
                        <input type="checkbox" id="tituloPagar-campo-caixa" class="form-control" />
                    </div>

                    <div class="col-1">
                        <label for="tituloPagar-campo-banco">Banco</label>
                    </div>
                    <div class="col-5">
                        <input type="checkbox" id="tituloPagar-campo-banco" class="form-control" />
                    </div>
                </div>



                <div class="form-group">
                    <label for="tituloPagar-campo-valor_total">Valor Total</label>
                    <input type="text" id="tituloPagarvalor-campo-valor_total" class="form-control" />
                </div>

                <div class="form-group">
                    <label for="tituloPagar-campo-status" mas>Status</label>
                    <select class="form-control" name="status">
                        <option disabled="disabled" selected="selected">Selecione um status</option>
                        <option>Pendente</option>
                        <option>Pago</option>
                        <option>Cancelado</option>
                        <option>Pago parcialmente</option>
                    </select>
                </div>

                <div class="form-group">
                    <label for="tituloPagar-campo-data_lancamento" mas>Data de Lançamento</label>
                    <input type="date" id="tituloPagar-campo-data_lancamento" class="form-control" />
                </div>

                <div>
                    <div class="form-group">
                        <label for="tituloPagar-campo-data_recebimento" mas>Data de Recebimento</label>
                        <input type="date" id="tituloPagar-campo-data_recebimento" class="form-control" />
                    </div>
                </div>

                <div>
                    <div class="form-group">
                        <label form="tituloPagar-campo-data_pagamento" mas>Data Pagamento</label>
                        <input type="date" id="tituloPagar-campo-data_pagamento" class="form-control" />
                    </div>
                </div>

                <div>
                    <div class="form-group">
                        <label for="tituloPagar-campo-complemento" mas>Complemento</label>
                        <input type="text" id="tituloPagar-campo-complemento" class="form-control" />
                    </div>
                </div>

                <div>
                    <div class="form-group">
                        <label for="tituloPagar-campo-quantidadeParcelas">Quantidade de Parcelas</label>
                        <input type="number" id="tituloPagar-campo-quantidadeParcelas" class="form-control" />
                    </div>
                </div>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-primary" id="pessoa-botao-salvar">Salvar</button>
            </div>
        </div>
    </div>
   </form>
