
@{
    ViewBag.Title = "Index";
}

<div class="container">

    <div class="row">
        <div class="col-12">

            <div style="width:500px; height:800px">
                <canvas id="ChartGraph" class="line-chart"></canvas>
            </div>
            <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.8.0/Chart.bundle.js"></script>


            <script>
                var ctx = document.getElementsByClassName("line-chart");
                var ChartGraph = new Chart(ctx, {
                    type: 'line',
                    data: {
                        labels: ["Jan", "Fev", "Mar", "Abr", "Mai", "Jun", "Jul", "Ago", "Set", "Out", "Nov", "Dez"],
                        datasets: [{
                            label: "A Pagar -2019",
                            data: [5, 10, 5, 14, 20, 15, 6, 14, 8, 12, 15, 5, 10],
                            borderWidth: 4,
                            borderColor: 'rgba(255,0,0)',
                            backgroundColor: 'transparent',
                        },
                        {
                            label: "A Receber - 2019",
                            data: [12, 15, 1, 18, 12, 18, 2, 11, 4, 6, 6, 12, 18],
                            borderWidth: 4,
                            borderColor: 'rgba(0,0,255)',
                            backgroundColor: 'transparent',
                        }]
                    },
                    options: {
                        title: {
                            display: true,
                            fontSize: 20,
                            text: "Titulos A PAGAR/RECEBER"
                        }
                    }

                });

            </script>

        </div>
    </div>
    <div class="row">

        <div class="col-12">


            <div style="width:313px; height:1800px">
                <canvas id="myChart" width="500" height="400"></canvas>
            </div>
            <script>
                var ctx = document.getElementById('myChart');
                var myChart = new Chart(ctx, {
                    type: 'bar',
                    data: {
                        labels: ['Red', 'Blue'],
                        datasets: [{
                            label: '# of Votes',
                            data: [12, 19],
                            backgroundColor: [
                                'rgba(255, 99, 132, 0.2)',
                                'rgba(54, 162, 235, 0.2)',
                                
                            ],
                            borderColor: [
                                'rgba(255, 99, 132, 1)',
                                'rgba(54, 162, 235, 1)',
                                'rgba(255, 206, 86, 1)',
                                'rgba(75, 192, 192, 1)',
                                'rgba(153, 102, 255, 1)',
                                'rgba(255, 159, 64, 1)'
                            ],
                            borderWidth: 1
                        }]
                    },
                    options: {
                        scales: {
                            yAxes: [{
                                ticks: {
                                    beginAtZero: true
                                }
                            }]
                        }
                    }
                });
            </script>
        </div>
    </div>


</div>
