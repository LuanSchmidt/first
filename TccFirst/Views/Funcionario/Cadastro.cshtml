<div id="modal-funcionario" class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"><b>Cadastro de Funcionario</b></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label for="funcionario-campo-nome" mas><b>Nome<span class="text-danger">*</span></b></label>
                    <input type="text" id="funcionario-campo-nome" class="form-control border-dark" />
                </div>
                <div class="form-group">
                    <label for="funcionario-campo-tipo" mas><b>Tipo<span class="text-danger">*</span></b></label>
                    <select class="form-control border-dark" id="funcionario-campo-tipo">
                        <option disabled="disabled" selected="selected">Selecione o Tipo de Funcionario...</option>
                        <option>Gerente</option>
                        <option>Funcionário</option>
                    </select>
                </div>

                <div class="row">
                    <div class="col-6">
                        <div class="form-group">
                            <label for="funcionario-campo-usuario"><b>Usuario<span class="text-danger">*</span></b></label>
                            <input type="text" id="funcionario-campo-usuario" class="form-control border-dark" />
                        </div>
                    </div>

                    <div class="col-6">
                        <div class="form-group">
                            <label for="funcionario-campo-senha"><b>Senha<span class="text-danger">*</span></b></label>
                            <input type="password" id="funcionario-campo-senha" class="form-control border-dark" />
                        </div>
                    </div>
                </div>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn" data-dismiss="modal" id="botao-cancelar"><i class="fa fa-close"></i> Cancelar</button>
                <button type="button" class="btn" id="funcionario-botao-salvar">
                    <i class="fa fa-save"></i> Salvar
                </button>
            </div>
        </div>
    </div>
</div>
<link href="~/Content/css/Funcionario/TelaCadastroFuncionario.css" rel="stylesheet" />
