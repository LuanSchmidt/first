

@{
    ViewBag.Title = "Index";
}
<div class="row">
    <div class="col-6"><h2>Agencia</h2></div>
    <div class="col-6"><a class="btn btn-success   float-right mb-3"
           href="/agencia/cadastro">Nova Agencia</a>
    </div>
</div>




<table id="agencia-tabela" class="table table-light table-hover table-border-style table-striped">
    <thead>
        <tr>
            <th >Código</th>
            <th>Nome Banco</th>
            <th>Nome Agencia</th>
            <th>Numero Agencia</th>
            <th>Ação</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Model.Agencia agencia in ViewBag.Agencias)
        {
            <tr>
                <td>@agencia.Id</td>
                <td>@agencia.Banco</td>
                <td>@agencia.NomeAgencia</td>
                <td>@agencia.NumeroAgencia</td>
                <td>
                    <div class="row">
                        <div class="col-8">
                            <a id="botao-editar" class="btn btn-primary float-right" href="/agencia/editar?id=@agencia.Id">Editar</a>
                        </div>
                        <div class="col-4">
                            <a id="botao-apagar" class="btn btn-danger float-right" href="/agencia/apagar?id=@agencia.Id">Apagar</a>
                        </div>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>




